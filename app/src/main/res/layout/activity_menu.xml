<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:orientation="vertical">
      <TableRow
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">
          <LinearLayout
              android:layout_height="match_parent"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:src="@drawable/plus"
                android:layout_margin="40dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Raportează o problemă"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:layout_width="0dp"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="6"
                  android:src="@drawable/settings"
                  android:layout_margin="40dp">>
              </ImageView>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:text="Setările contului"
                  android:textSize="15sp"
                  android:layout_gravity="center"
                  android:fontFamily="sans-serif-black"
                  android:textStyle="bold"
                  android:textColor="@color/black">
              </TextView>
          </LinearLayout>
      </TableRow>
      <TableRow
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:src="@drawable/road"
                android:layout_margin="40dp">>
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Probleme cu străzile"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:src="@drawable/streetlamp"
                android:layout_margin="40dp">>
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Probleme cu iluminatul"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
      </TableRow>
      <TableRow
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:src="@drawable/dots"
                android:layout_margin="40dp">>
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Alte probleme"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:src="@drawable/logout"
                android:layout_margin="40dp"
                android:layout_marginBottom="10dp">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Ieși din cont"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textColor="@color/black"
                >
            </TextView>
        </LinearLayout>
      </TableRow>

</TableLayout>